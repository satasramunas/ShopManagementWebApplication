@using ShopManagementWebApp.Dtos
@model CreateShopDto

<h2>Add an item</h2>

@using (Html.BeginForm("Add", "Shop", FormMethod.Post)) //action name, controller, method
{
    <div class="form-group">
        @Html.LabelFor(a => a.Item.Name)
        @Html.TextBoxFor(a => a.Item.Name, "", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Item.ShopName)
        @Html.TextBoxFor(a => a.Item.ShopName, "", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Item.ExpiryDate)
        @Html.TextBoxFor(a => a.Item.ExpiryDate, "", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Item.UserId)
        @Html.DropDownListFor(a => a.Item.UserId, new SelectList(@Model.Users, "Id", "FullName"), "", new {@class = "form-control"})
    </div>

    <input class="btn btn-primary" type="submit" value="Submit"/>
}